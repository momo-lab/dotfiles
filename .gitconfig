[alias]
  tree = log --graph --oneline --pretty=tree-format --date='format:%Y-%m-%d %H:%M'
  tr = log --graph --oneline --pretty=tree-format --date='format:%Y-%m-%d %H:%M'
  st = status
  ci = commit
  cim = commit -m
  co = checkout
  diffs = diff --staged
  diffc = diff --cached
  ss = show-select
  delete-merged-branches = !git branch --merged | grep -vE '^\\*|master$|develop$' | xargs -I % git branch -d %
[init]
  templatedir = ~/.git_template
[diff]
  compactionHeuristic = true
[commit]
  verbose = true
[color]
  ui = auto
[core]
  autocrlf = false
  editor = vim
  excludesfile = ~/.gitignore_global
[include]
  path = .gitconfig_local
[push]
  default = simple
[pull]
  rebase = true
[user]
  email = momotaro.n@gmail.com
  name = momotaro
[github]
  user = momo-lab
[bitbucket]
  user = momo-lab
[pre-push]
  grep = ^\\(\\[from now\\]\\|WIP\\|\\.local\\)
[rebase]
  autosquash = true
[merge]
  ff = false
[pretty]
  localinfo-format = format:%C(auto)%h %C(green)%cd%C(auto)%d %s
  tree-format = format:%C(auto)%h %C(green)%cd%C(auto)%d %s %C(cyan bold)%an%C(reset)

[alias]
  tree = log --graph --oneline --decorate
  tr = log --graph --oneline --decorate
  btree = log --graph --oneline --decorate --simplify-by-decoration --all
  btr = log --graph --oneline --decorate --simplify-by-decoration --all
  st = status
  ci = commit -v
  cim = commit -m
  co = checkout
[color]
  ui = auto
[core]
  autocrlf = false
    editor = vim
  excludesfile = ~/.gitignore_global
[include]
  path = .gitconfig_local
[push]
    default = simple
[pull]
  rebase = true
